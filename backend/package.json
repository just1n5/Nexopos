{
  "name": "nexopos-backend",
  "version": "0.1.0",
  "private": true,
  "description": "NexoPOS backend monolith",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "heroku-postbuild": "nest build",
    "render:build": "npm install && npm run build",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./jest-e2e.json",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:prod": "node dist/scripts/seed.js",
    "seed:test-users": "ts-node src/scripts/seed-test-users.ts",
    "seed:test-data": "ts-node src/scripts/seed-test-data.ts",
    "seed:accounting": "ts-node src/scripts/seed-accounting.ts",
    "seed:accounting:prod": "node dist/scripts/seed-accounting.js",
    "fix:stock": "ts-node src/scripts/fixes/add-initial-stock.ts",
    "generate:beta-keys": "ts-node -r tsconfig-paths/register src/scripts/generate-beta-keys.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts && echo 'Migrations finished'",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
    "schema:sync": "node node_modules/typeorm/cli.js schema:sync -d dist/config/data-source.js",
    "fix:beta-key-nulls": "node dist/scripts/fix-beta-key-nulls.js"
  },
  "dependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/typeorm": "^10.0.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.25",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^7.0.2",
    "@types/passport-jwt": "^3.0.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.4",
    "swagger-ui-express": "^5.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/exceljs": "^0.5.3",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1"
  }
}
