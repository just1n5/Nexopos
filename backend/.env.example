# Server configuration
PORT=3000
NODE_ENV=development

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# PRODUCCIÓN: Supabase PostgreSQL (RECOMENDADO)
# El proyecto está configurado para usar Supabase en producción
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DB_SCHEMA=public
DB_SYNC=false  # IMPORTANTE: Usar false en producción, usar migraciones
DB_LOGGING=false

# DESARROLLO LOCAL: PostgreSQL Local (ALTERNATIVA)
# Descomenta estas líneas si prefieres usar PostgreSQL local para desarrollo
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nexopos
# DB_USER=nexopos
# DB_PASSWORD=changeme
# DB_SCHEMA=public
# DB_LOGGING=true
# DB_SYNC=true  # Puede usar true solo en desarrollo local

# NOTA: Si usas Supabase, comenta las variables DB_HOST, DB_PORT, etc.
# TypeORM prioriza DATABASE_URL si está presente

# Auth
JWT_SECRET=super-secret-change-me
JWT_EXPIRES_IN=3600s
BCRYPT_SALT_ROUNDS=12

# Email Configuration (optional)
EMAIL_ENABLED=false

# SendGrid (recommended)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP fallback (if not using SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Email sender
EMAIL_FROM=NexoPOS <noreply@nexopos.com>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173
